#
# wm independent hotkeys
#

# terminal emulator
alt + shift + Return
	xst

# program launcher
alt + d
	rofi -show drun -font "t cherry 9" 

alt + a
    rofi -show ssh -font "t cherry 9"


# make sxhkd reload its configuration files:
alt + shift + Escape
	pkill -USR1 -x sxhkd

#
# programs hot key
#

# close and kill
alt + {shift + F4,F4}
	bspc node -{k,c}

#Utility Keys
XF86Audio{Raise,Lower}Volume
    amixer set Master 1%{+,-}

XF86AudioMute
    amixer set Master toggle

XF86Audio{Prev,Next}
    mpc {prev,next}

XF86AudioPlay
    ~/.scripts/mpdcontrol

Print
    xfce4-screenshooter -r

super + alt + b + {0, 9}
    xbacklight -set {0, 100}

#Program Keys
super + q 
    ~/.scripts/mpdmenu
