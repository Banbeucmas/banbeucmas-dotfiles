bottom = false
background = ${colors.background}
foreground = ${colors.foreground}

font-0 = "fira code:size=9:style=Regular;1"
font-1 = "fira mono:size=9:style=Regular;1"
font-2 = unifont:fontformat=truetype:size=18:antialias=true;0
