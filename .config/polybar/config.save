[colors]
;background = ${xrdb:color0:#222}
background = #262626
background-alt = #292929
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
white = #fff
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

underline = #ec7285


[bar/bottom_right]
monitor = eDP1
width = 28%
height = 30
offset-y = 10
offset-x = 970
fixed-center = false
bottom = true
background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2

font-0 = "fira mono:size=9:style=Regular;1"
font-1 = "fira code:size=9:style=Regular;1"
font-2 = unifont:fontformat=truetype:size=18:antialias=true;0
font-3 = "Font Awesome 5 Free:style=Solid:pixelsize=9;1"
font-4 = "Font Awesome 5 Free:style=Regular:pixelsize=9;1"
font-5 = "Font Awesome 5 Brands:pixelsize=9;1"
font-6 = "Noto Sans CJK JP:size=9:antialias=true;1"
font-7 = "Font Awesome 5 Brands:pixelsize=13;3"
font-8 = "Font Awesome 5 Free:style=Solid:pixelsize=8.5;1"
font-9 = "Font Awesome 5 Free:style=Regular:pixelsize=12;2"

modules-left = 
modules-center = 
modules-right = mpd

wm-restack = bspwm
override-redirect = true

